
<div class="row" >
  <div class="col-sm-9"> 
     <div class="media">
      <div class="media-left">
        <a href="#" class="img-link" >

          <% if object.thumb_image_url.nil? %>
            <img class="media-object" data-src="holder.js/64x64" alt="64x64" src="data:image/svg+xml;base64," data-holder-rendered="true" style="width: 64px; height: 64px;">
          <% else %> 
            <%= image_tag object.thumb_image_url, 
                :class => "media-object user-pic", 
                :style => "width: 64px; height: 64px;" %>

            <span class="hidden"><%= object.medium_image_url %></span>
          <% end %>

        </a>
      </div>

      <div class="media-body">
        <h4 class="media-heading" id="media-heading"><%= object.title %><a class="anchorjs-link" href="#media-heading"><span class="anchorjs-icon"></span></a></h4>
        Project Awesome

        <br />
     

        <%= link_to new_reimburse_reimburse_detail_url(object), 
              :class => "btn btn-success btn-xs" , 
              :role => "button" do %>
          <span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span>  
          Add
        <% end %>  



        <%= link_to edit_reimburse_url(object), 
              :class => "btn btn-primary btn-xs" , 
              :role => "button" do %>
          <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>  
          Edit
        <% end %>  

        <%= link_to reimburse_url(object), 
                :method => :delete , 
                :data => {:confirm => "Are you sure?"},
              :class => "btn btn-danger btn-xs" , 
              :role => "button" do %>
          <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>  
          Delete
        <% end %>  


        <% object.reimburse_details.each do |reimburse_detail| %>
          <%= render :partial => "reimburse_detail", 
              :locals => {
                :object => reimburse_detail ,
                :parent => object
              }
           %> 
        <% end %> 
        <%#= render :partial => "reimburse_detail" %> 
        <%#= render :partial => "reimburse_detail" %> 

        <%#= render :partial => "reimburse_detail" %> 
        <%#= render :partial => "reimburse_detail" %> 
     
     
      </div>
    </div>
  </div>

  <div class="col-sm-3 center-block" style="text-align:center;" >
    <h3>Total = <%= object.reimburse_details.sum("amount") %></h3>
    <br />
    <button type="button" class="btn btn-primary">
      <span class="glyphicon glyphicon-upload" aria-hidden="true"></span> 
      Submit
    </button>
  </div>
</div>
<hr />



